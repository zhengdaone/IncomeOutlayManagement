<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title"
             android:id="@+id/title"/>
    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/darkgray"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/menu1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1px"
            android:layout_weight="1"
            android:background="@drawable/white"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/menu"
            android:gravity="center"
            android:textColor="@drawable/tmenu1"
            android:text="记事簿"/>

        <TextView
            android:id="@+id/menu2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1px"
            android:layout_weight="1"
            android:background="@drawable/white"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/menu2"
            android:gravity="center"
            android:textColor="@drawable/tmenu2"
            android:text="分类"/>

        <TextView
            android:id="@+id/menu3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1px"
            android:layout_weight="1"
            android:background="@drawable/white"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/menu3"
            android:gravity="center"
            android:textColor="@drawable/tmenu3"
            android:text="收支"/>

        <TextView
            android:id="@+id/menu4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1px"
            android:layout_weight="1"
            android:background="@drawable/white"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/menu4"
            android:gravity="center"
            android:textColor="@drawable/tmenu4"
            android:text="我的"/>

        </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_menu"
        android:layout_below="@id/title"
        android:background="@drawable/white">
        </FrameLayout>

</RelativeLayout>